<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>default</LangVersion>
        <TargetFramework>net8.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>1.0.0</Version>
        <Version Condition=" '$(BuildNumber)' != '' " >$(Version).$(BuildNumber)</Version>
        <InformationalVersion Condition=" '$(BuildInfo)' != '' " >$(Version)-$(BuildInfo)</InformationalVersion>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>TreeSitter.NET</PackageId>
        <Title>Tree sitter .NET</Title>
    </PropertyGroup>

    <ItemGroup>
        <None Include="native/linux-x64/libtree-sitter.so" Pack="true" PackagePath="runtimes/linux-x64/native/" >
            <TargetPath>%(Filename)%(Extension)</TargetPath>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>
</Project>
